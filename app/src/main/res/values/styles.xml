<resources>

    <!-- Base application theme. -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Color attributes -->
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/pink_a200</item>
        <item name="colorSecondaryVariant">@color/pink_a700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorError">@color/red_700</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="android:statusBarColor">@color/teal_700</item>

        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/pink_a200</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

</resources>
